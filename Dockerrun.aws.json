{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name": "client",
            "image": "dinrej/multi-client",
            "hostname": "client",
            "essential" : false
        },
        {
            "name": "server",
            "image": "dinrej/multi-server",
            "hostname": "api",
            "essential" : false
        },
        {
            "name": "worker",
            "image": "dinrej/multi-worker",
            "hostname": "worker",
            "essential" : false
        },
        {
            "name": "nginx",
            "image": "dinrej/multi-nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links": ["client","server"]
        }
        
    ]
}